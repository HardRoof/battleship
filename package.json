{
  "name": "battleship",
  "version": "1.0.0",
  "description": "A Battleship game created following TDD principles.",
  "scripts": {
    "build": "webpack --mode=development --watch --progress",
    "release": "webpack --mode=production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix-dry-run",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "modulePaths": ["/shared/vendor/modules"],
    "moduleFileExtensions": ["js", "jsx"],
    "moduleDirectories": ["node_modules", "bower_components", "shared"],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HardRoof/battleship.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HardRoof/battleship/issues"
  },
  "homepage": "https://github.com/HardRoof/battleship#readme",
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "babel-jest": "^29.2.2",
    "babel-loader": "^9.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.2.2",
    "prettier": "2.7.1",
    "style-loader": "^3.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
